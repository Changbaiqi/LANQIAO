package lanqiao;

import java.util.Scanner;

public class 小明的背包4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int N =sc.nextInt(); //数量
		int V = sc.nextInt(); //容量
		
		
		int w[] = new int[2000001];
		int v[] = new int[2000001];
		
		for(int i= 1 ,x=1; i <=N ; ++i) {
			int ww = sc.nextInt();
			int vv = sc.nextInt();
			int s = sc.nextInt();
			
			int res =x;
			for(; x<res+s; ++x) {
				w[x] =ww;
				v[x] = vv;
				
			}
		}
		

		
		
	}

}
