package lanqiao;

import java.util.Scanner;

public class 翻转括号序列 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		int m = sc.nextInt();
		
		
		int map[] = new int[n+1];
		String str = sc.next();
		for(int i=0;i <n ; ++i) {
			if(str.charAt(i)=='(')
				map[i+1]=map[i]+1;
			else if(str.charAt(i)=='(')
				map[i+1]=map[i]-1;
		}
		
		for(int i= 1 ; i <= m; ++i) {
			int c = sc.nextInt();
			//操作2
			if(c==2) {
				int index = sc.nextInt();
				
			}else if(c==1) {//操作1
				
			}
			
			
		}
		
	}

}
