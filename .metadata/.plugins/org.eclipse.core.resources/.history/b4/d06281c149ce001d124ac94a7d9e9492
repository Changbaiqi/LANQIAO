package lanqiao;

import java.util.Arrays;
import java.util.Scanner;

public class 蓝桥杯2022初赛数组切分 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc =  new Scanner(System.in);
		
		int N = sc.nextInt();
		
		int data[] = new int[N];
		
		int dp[] = new int[N];
		for(int i =0 ; i < data.length ; ++i) {
			data[i] = sc.nextInt();
			check(data,i+1);
		}
	}
	
	public static int check(int data[],int index) {
		int ans =0;
		int i =index-1;
		while(i>=0) {
			int res[] = Arrays.copyOfRange(data,i, index);
			Arrays.sort(res);
			if((res.length-1)==(res[res.length-1]-res[0]))
				++ans;
			else
				return ans;
			--i;
		}
		return ans;
	}

}
