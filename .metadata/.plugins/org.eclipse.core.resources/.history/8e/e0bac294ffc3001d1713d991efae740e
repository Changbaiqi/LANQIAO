package lanqiao;

import java.util.Arrays;
import java.util.Scanner;

public class 试试看二分 {

	public static void main(String[] args) {
		 
		
		Scanner sc = new Scanner(System.in);
		
		int T = sc.nextInt();
		
		for(int i = 0; i< T ; ++i) {
			int n = sc.nextInt(); //物品数量
			int k = sc.nextInt(); //
			
			int value[] = new int[n];
			int weight[] = new int[n];
			
			
			
			for(int x= 0 ; x <n ; ++x) {
				value[x] = sc.nextInt();
				weight[x] = sc.nextInt();
			}
			
			
			double l = 0,r=1e11,mid;
			while(l<=r) {
				mid = (l+r)/2;
				if(check(mid,k,value,weight))
					l = mid+1;
				else
					r =mid-1;
			}
			System.out.println(l);
			
			
			
		}
		
							
		
	}
	
	public static boolean check(double mid,int k,int value[],int weight[]) {
		
		Double c[] = new Double[value.length];
		
		for(int i = 0; i < value.length ; ++i) {
			c[i] = (double)(value[i] - weight[i]*mid);
		}
		Arrays.sort(c,(x,y)->(int)(y*1000-x*1000));
		
		if(c[k-1]>0)
			return true;
		
		
		return false;
	}

}
