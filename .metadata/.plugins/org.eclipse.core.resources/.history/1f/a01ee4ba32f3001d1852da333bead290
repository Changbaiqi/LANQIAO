package lanqiao;

import java.util.Scanner;

/**
 * https://www.luogu.com.cn/problem/P3842
 * @author ³¤°×Æé
 *
 */
public class Ïß¶Î {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		
		int n = sc.nextInt();
		int L[] = new int[n+1];
		int R[] = new int[n+1];
		
		for(int i= 1 ; i <=n ; ++i) {
			L[i] = sc.nextInt();
			R[i] = sc.nextInt();
		}
		
		int dp[][] = new int[n+1][2];
		dp[0][0] = 1;
		dp[0][1] = 1;
		for(int y = 1;y<=n;++y) {
			for(int x=0 ; x<=1; ++x) {
				//dp[y][0] = Math.min(dp[y-1][0], dp[y-1][1])Math.abs(L[y]);
				int a= dp[y-1][0]+Math.max(Math.abs(R[y]-R[y-1]), Math.abs(L[y]-R[y-1]))+Math.abs((R[y]-L[y]))+1;
				int b =dp[y-1][1]+Math.max(Math.abs(R[y]-R[y-1]), Math.abs(L[y]-R[y-1]))+Math.abs((R[y]-L[y]))+1;;
				dp[y][x] = Math.min(a, b); 
			}
		}
		System.out.println(Math.min(dp[n][0],dp[n][1]));
		
	}

}
