package lanqiao;

import java.util.Arrays;
import java.util.Scanner;

public class 通电 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		
		int x[] = new int[n];
		int y[] = new int[n];
		int h[] = new int[n];
		
		for(int i = 0 ; i < n ; ++i) {
			x[i] = sc.nextInt();
			y[i] = sc.nextInt();
			h[i] = sc.nextInt();
		}
		
		
	}
	
	
	
