package lanqiao;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Arrays;
import java.util.Scanner;

public class 巧克力 {

	public static void main(String[] args) throws FileNotFoundException {
		// TODO Auto-generated method stub
		File f = new File("C:\\Users\\20840\\Desktop\\测试.txt");
		
		Scanner sc = new Scanner(f);
		
		int x = sc.nextInt(); //吃巧克力天数
		int n = sc.nextInt(); //种类
		
		C data[] = new C[n+1];
		
		data[0] = new C(0,0,99);
		for(int i = 1 ; i <=n ; ++i) {
			long a = sc.nextInt(); //单价
			long b = sc.nextInt(); //保质期
			long c = sc.nextInt(); //数量
			data[i] = new C(a,b,c);
		}
		
		Arrays.sort(data,1,n,(a,b)->{
			return a.getA()-b.getA();
		});
		
		
		long ans =0;
		long latemin=0;
		for(int i=1; i <=n ; ++i) {
			long min = Math.min(data[i].getB()-latemin<=0?0:data[i].getB()-latemin,data[i].getC());
			long res = min+latemin;
			
			
			
			if(res>=x) {
				ans+=(x-latemin)*data[i].getA();
				System.out.println(ans);
				return;
			}
			
			latemin = res;
			ans+=min*data[i].getA();
		}
		
		System.out.println(-1);
		
	}
	
	
	static class C{
		private long a;
		private long b;
		private long c;
		
		
		
	}

}
