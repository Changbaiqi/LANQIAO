		Scanner sc = new Scanner(System.in);

		int N = sc.nextInt(); // 数量
		int V = sc.nextInt(); // 容量

		int w[] = new int[2000001];
		int v[] = new int[2000001];
		int s[] = new int[2000001];
		
		for (int i = 1, x = 1,y=1; i <= N; ++i) {
			int ww = sc.nextInt();
			int vv = sc.nextInt();
			int n = sc.nextInt();

			int res = x;
			for (; x < res + n; ++x) {
				w[x] = ww;
				v[x] = vv;
				s[x] = 1;
			} 
			if(n==0) {
				w[x] = ww;
				v[x] = vv;
				s[x] = 0;
				++x'
			}
		}

