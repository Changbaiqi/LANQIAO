package lanqiao;

import java.util.Scanner;

public class ±³°üÓëÄ§·¨ {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int N = sc.nextInt();
		int M =sc.nextInt();
		int K = sc.nextInt();
		
		int w[][] = new int[N+1][3];
		int v[][] = new int[N+1][3];
		
		for(int i=1 ; i <= N ; ++i) {
			w[i][1] = sc.nextInt();
			v[i][1] = sc.nextInt();
			
			w[i][2] = w[i][1]+K;
			v[i][2] = v[i][2]*2;
		}
		
		
		int dp[] = new int[M+1];
		for(int y = 1; y <= N ; ++y) {
			for(int x = M ; x>=1 ; --x) {
				if(x>=w[y][1])
					dp[x] = Math.max(dp[x], dp[x-w[y][1]]+v[y][1]);
				if(x>=w[y][2])
					dp[x] = Math.max(dp[x], dp[x-w[y][2]]+v[y][2]);
			}
		}
		System.out.println(M);
		
	}

}
