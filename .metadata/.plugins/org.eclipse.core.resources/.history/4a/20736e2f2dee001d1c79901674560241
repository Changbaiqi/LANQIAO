package lanqiao;

import java.util.Scanner;

public class 小明的背包4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int N =sc.nextInt(); //数量
		int V = sc.nextInt(); //容量
		
		
		int w[] = new int[2000001];
		int v[] = new int[2000001];
		
		int ans =0;
		for(int i= 1 ,x=1; i <=N ; ++i) {
			int ww = sc.nextInt();
			int vv = sc.nextInt();
			int s = sc.nextInt();
			ans+=s;
			
			int res =x;
			for(; x<res+s; ++x) {
				w[x] =ww;
				v[x] = vv;
			}
		}
		
		int dp[][] = new int[ans+1][V+1];
		
		for(int y =1; y < ans+1 ; ++y) {
			for(int x = 1 ; x < V+1 ;++x) {
				
				if(x>=w[y]) {
					dp[y][x] = Math.max(dp[y-1][x-w[y]], dp[y-1][x]);
				}else {
					
				}
			}
		}
		

		
		
	}

}
