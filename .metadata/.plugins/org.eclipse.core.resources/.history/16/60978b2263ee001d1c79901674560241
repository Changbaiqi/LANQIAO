package lanqiao;

import java.util.Scanner;

public class 小明的背包4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		int N = sc.nextInt(); // 数量
		int V = sc.nextInt(); // 容量

		int w[] = new int[2000001];
		int v[] = new int[2000001];
		int s[] = new int[2000001];

		int ans = 0;
		for (int i = 1, x = 1, y = 1; i <= N; ++i) {
			int ww = sc.nextInt();
			int vv = sc.nextInt();
			int n = sc.nextInt();

			int res = x;
			for (; x < res + n; ++x) {
				w[x] = ww;
				v[x] = vv;
				s[x] = 1;
				++ans;
			}
			if (n == 0) {
				w[x] = ww;
				v[x] = vv;
				s[x] = 0;
				++x;
				++ans;
			}
		}

		int dp[] = new int[V + 1]; 

		for (int y = 1; y <= ans; ++y) {

			if (s[y] == 1) {
				for (int x = V; x >= 1; --x)
					if (x >= v[y])
						dp[x] = Math.max(dp[x], dp[x - w[y]] + v[y]);
			} else if (s[y] == 0) {
				for (int x = 1; x <= V; ++x)
					if (x >= v[y])
						dp[x] = Math.max(dp[x], dp[x - w[y]]+ v[y]);
			}

		}

		System.out.println(dp[V]);

	}

}
