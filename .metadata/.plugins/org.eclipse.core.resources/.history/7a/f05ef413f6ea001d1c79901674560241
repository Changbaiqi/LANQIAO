package lanqiao;

import java.util.HashMap;
import java.util.Scanner;

public class 好等差数列 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		
		//数列长度
		int n = sc.nextInt();
		
		//存储数据的数组
		int data[] = new int[n];
		for(int i= 0 ; i < n ; ++i) {
			data[i] =sc.nextInt();
		}
		System.out.println(slove(data));
		int c = sc.nextInt();
		
		for(int i= 0; i <c ; ++i) {
			int a = sc.nextInt();
			int v = sc.nextInt();
			//暂时寄存
			int res = data[a];
			
			data[a] = v;
			
			System.out.println(slove(data));
			//data[a] = res;
		}
		
		
		
	}
	
	public static int slove(int arr[]) {
		 int n = arr.length;
		    if (n <= 2) {
		        return 0;
		    }
		    int[] diffs = new int[n - 1];
		    for (int i = 0; i < n - 1; i++) {
		        diffs[i] = arr[i + 1] - arr[i];
		    }
		    int maxCount = 2;  // 最长等差数列的长度
		    int count = 2;  // 当前等差数列的长度
		    int diff = diffs[0];  // 当前等差数列的公差
		    for (int i = 1; i < n - 1; i++) {
		        if (diffs[i] == diff) {
		            count++;
		        } else {
		            maxCount = Math.max(maxCount, count);
		            count = 2;
		            diff = diffs[i];
		        }
		    }
		    maxCount = Math.max(maxCount, count);
		    return n - maxCount;
	}

}
